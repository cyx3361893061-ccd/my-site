  <script>
    const snowflakes = ["❆", "✼", "❅", "❄", "✻", "✼"];
    const createSnowflake = () => {
      const flake = document.createElement("span");
      flake.className = "snowflake";
      flake.textContent = snowflakes[Math.floor(Math.random() * snowflakes.length)];
      const size = Math.random() * 12 + 8;
      flake.style.left = `${Math.random() * 100}vw`;
      flake.style.fontSize = `${size}px`;
      flake.style.animationDuration = `${Math.random() * 4 + 6}s`;
      flake.style.animationDelay = `${Math.random() * 2}s`;
      flake.style.opacity = (Math.random() * 0.5 + 0.5).toFixed(2);
      document.body.appendChild(flake);

      flake.addEventListener("animationend", () => flake.remove());
    };

    const density = matchMedia("(max-width: 600px)").matches ? 120 : 160;
    setInterval(createSnowflake, 1000 / (density / 10));
    for (let i = 0; i < density; i++) {
      setTimeout(createSnowflake, i * 30);
    }
  </script>
